{
  "manifest_version": 2,
  "name": "CDL Ebay Modifier",
  "version": "1.0",
  "description": "Modify eBay to improve financial value",
 
  "icons": {
      "128": "img/icon128.png",
      "48": "img/icon48.png",
      "16": "img/icon16.png"
  },

  "browser_action": {
      "default_icon": "img/icon16.png",
      "default_popup": "popup.html",
      "default_title": "Modify my eBay"
  },
  "background": {
	  "scripts": [
	  "js/fetchGetPrice.js",
	  "js/background.js",
	  "js/materialize.js"
	  ],
	  "persistent": false
  },
  "content_scripts": [
      {
		"run_at": "document_end",
        "js": [
			"lib/jquery.min.js",
			"js/materialize.js",
			"js/popup.js",
			"js/chart.js"
		],
        "css": ["css/style.css"],
        "matches": ["https://*.ebay.com.au/*"]
      }
    ],
	"permissions":[
		  "https://*.ebay.com.au/*",
		  "https://www.getprice.com.au/*",
		  "declarativeContent",
		  "storage", 
          "tabs",
		  "activeTab"
     ],
	 "web_accessible_resources": [
    "jquery.min.js"
	]
  
}